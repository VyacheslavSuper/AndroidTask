<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="181dp"
            android:layout_height="107dp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp">
        <TextView
                android:text="@string/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/idCur"
        />
        <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameCur"
        />
        <TextView
                android:text="@string/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/codeCur"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="@string/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/valueCur"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="188dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:text="Обмен рублей на эту валюту"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"
        />
        <EditText
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextNumber"/>
        <Button
                android:text="Обмен"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/exchange"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/result"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>